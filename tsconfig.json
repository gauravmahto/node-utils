{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "es2017",
      "dom"
    ],
    "outDir": "dist",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "suppressImplicitAnyIndexErrors": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "sourceRoot": ".",
    "inlineSources": true,
    "baseUrl": ".",
    "paths": {}
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "node_modules", "dist"
  ]
}