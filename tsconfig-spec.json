{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "es2017",
      "dom"
    ],
    "rootDir": ".",
    "outDir": "dist",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "suppressImplicitAnyIndexErrors": true,
    "experimentalDecorators": true,
    "inlineSources": true,
    "baseUrl": ".",
    "paths": {
      "src": [
        "src"
      ],
      "src/*": [
        "src/*"
      ],
      "specs": [
        "specs"
      ],
      "specs/*": [
        "specs/*"
      ]
    }
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "node_modules", 
    "dist"
  ]
}